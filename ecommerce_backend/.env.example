# Backend environment variables (copy to .env for local development)

# Database
DATABASE_URL=postgresql+psycopg2://USER:PASSWORD@localhost:5432/DBNAME

# Security / JWT
JWT_SECRET=replace-with-a-long-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# CORS - include frontend preview origins for local dev
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# API base path (do not change unless you know what you're doing)
# Used by the application, not by FastAPI config directly here.
# API_V1_PREFIX=/api/v1

# Payments
PAYMENT_PROVIDER=stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# File storage
FILE_STORAGE_PROVIDER=local
FILE_STORAGE_DIR=./storage

# Misc
ENVIRONMENT=development
DEBUG=true
